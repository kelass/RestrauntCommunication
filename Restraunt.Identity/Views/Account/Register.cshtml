@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Restraunt.Core.Dto.RegisterDto

@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restraunt.Identity</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Restraunt.Identity.styles.css" asp-append-version="true" />
</head>
<div class="blocklogin btn-group-vertical">
    <div class="container text-center">
        <form method="post" asp-controller="Account" asp-action="Register" class="p-5 pb-5">
            <input type="hidden" asp-for="ReturnUrl" />
            <input placeholder="@Localizer["Login"]" class="w-50 form-control-sm" asp-for="UserName" /><br />
            <input placeholder="Id" hidden class="w-50 form-control-sm" asp-for="Id" value="@Guid.NewGuid()" /><br />
            <input placeholder="@Localizer["Email"]" class="w-50 form-control-sm" asp-for="Email" /><br />
            <input placeholder="@Localizer["Password"]" type="password" class="w-50 form-control-sm" asp-for="Password" /><br />
            <input placeholder="@Localizer["Password confirm"]" type="password" class="w-50 form-control-sm" asp-for="ConfirmPassword" /><br />
            <input type="submit" class="btn btn-dark" value="@Localizer["Register"]" />
            
        </form>
    </div>
</div>
