
@model Restraunt.Core.Dto.RegisterDto
<div class="blocklogin btn-group-vertical">
    <div class="container text-center">
        <form method="post" asp-controller="Account" asp-action="Register" class="p-5 pb-5">
            <input placeholder="Login" class="w-50 form-control-sm" asp-for="UserName" /><br />
            <input placeholder="Id" hidden class="w-50 form-control-sm" asp-for="Id" value="@Guid.NewGuid()" /><br />
            <input placeholder="Email" class="w-50 form-control-sm" asp-for="Email" /><br />
            <input placeholder="Password" class="w-50 form-control-sm" asp-for="Password" /><br />
            <input type="submit" class="btn btn-dark" value="Login" />
        </form>
    </div>
</div>
