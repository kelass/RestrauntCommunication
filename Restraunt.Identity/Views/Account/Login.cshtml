@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Restraunt.Core.Dto.LoginDto
@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restraunt.Identity</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Restraunt.Identity.styles.css" asp-append-version="true" />
</head>
<div class="blocklogin btn-group-vertical">
    <div class="container text-light">
        <h1 class="text-center text-capitalize">Sign in</h1>
    </div>
    <div class="container text-center">

        <form class="p-5" method="post" asp-controller="Account" asp-action="Login">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="ReturnUrl" />
            <input placeholder="@Localizer["Login"]" class="w-50 form-control-sm" asp-for="UserName" /><br />
            <input type="password" placeholder="@Localizer["Password"]" class="w-50 form-control-sm m-2" asp-for="Password"/><br />
            <input type="submit" class="btn btn-dark" value="@Localizer["Sign in"]"/>
            
        </form>


        
        <div class="container text-center">
            <a class="btn btn-default text-white btn-dark" asp-controller="Account" asp-action="SignInGoogle">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google" viewBox="0 0 16 16">
                    <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z" />
                </svg>
            </a>
        </div>

        


        <a class="text-center text-white btn-default" asp-controller="Account" asp-action="Register"
           asp-route-returnUrl="@Model.ReturnUrl">@Localizer["Didn't have a account?"]
        </a>
        
    </div>
</div>


<script src="/_framework/aspnetcore-browser-refresh.js"></script>