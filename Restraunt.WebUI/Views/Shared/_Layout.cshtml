<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restraunt.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/aos.css" />
    <script src="~/js/aos.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Restraunt.WebUI.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="HeaderAndFooterStyle dropdown-header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black text-white box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Restraunt.WebUI</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Table" asp-action="Menu">Menu</a>
                        </li>
                       

                        @if (User.IsInRole("Waiter"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Waiter panel</a>
                            </li>
                        }
                        else if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Waiter panel</a>
                            </li>

                        }

                        @if (!User.Identity.IsAuthenticated)

                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
                                </li>
                            }
                        else
                        {   
                    <li class="nav-item">
                        <a class="nav-link text-white">@User.Identity.Name</a>
                    </li>
                        }
                        


                          
                        </ul>
                </div>
            </div>
        </nav>
    </header>
   
      
            @RenderBody()
        
 

    <footer class="HeaderAndFooterStyle border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Restraunt.WebUI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
