@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


<input hidden value="@ViewBag.access_token" id="access" />
<input id="DishId" hidden value="@Guid.NewGuid()" />
<input placeholder="@Localizer["Name of the dish"]" id="DishName"/>
<input placeholder="@Localizer["Description of the dish"]" id="DishDescription" />
<input placeholder="@Localizer["Price of the dish"]" id="DishPrice" />
<input id="submit" type="submit" value="@Localizer["Create"]"/>

    

@section Scripts{

<script src="../js/Dish.js"></script>
}
