@{
    Layout = "_AdminLayout";
}

<div>
    <div class="col-lg-12 mt-5 pt-5">
        <h2 class="section-title">All dishes</h2>
        <div><a asp-controller="Dish" asp-action="create" class="basic-button col-1">Add</a></div>
        <h5 class="danger-text">@TempData["Error"]</h5>
        <div class="overflow-auto text-nowrap">
            <table class="table basic-table">
                <thead class="table-headers">
                    <tr>
                        <th>
                            @Html.Label("Id")
                        </th>
                        <th>
                            @Html.Label("Name")
                        </th>

                        <th>
                            @Html.Label("Price")
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody id="tbody" class="table-records">
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="../js/DishGet.js"></script>
}