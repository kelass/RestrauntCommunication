@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    Layout = "_WaiterLayout";
    ViewData["Title"] = "Waiter panel";
}
<!-- Модальное окно -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                @Localizer["You binded to table"]
            </div>
        </div>
    </div>
</div>
<!-- Модальное окно -->
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                @Localizer["You clear table"]
            </div>
        </div>
    </div>
</div>
<div>
    <input value="@ViewBag.access_token" id="access" hidden />
    <input id="userId" value="@ViewBag.UserId" hidden />
    <div class="col-lg-12 mt-5 pt-5">
        <h2 class="section-title">@Localizer["Waiter tables"]</h2>
        
        <h5 class="danger-text">@TempData["Error"]</h5>
        <div class="overflow-auto text-nowrap">
            <table class="table basic-table">
                <thead class="table-headers">
                    <tr>
                       
                        <th>
                            @Localizer["Name"]
                        </th>

                        <th>
                            @Localizer["Active"]
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody id="tbody" class="table-records">
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="~/js/WaiterTableGet.js"></script>
    <script src="~/js/BindWaiterToTable.js"></script>
}