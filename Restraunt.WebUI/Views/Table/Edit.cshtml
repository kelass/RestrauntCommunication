
﻿@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!-- Модальное окно -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                @Localizer["You edited table"]
            </div>
        </div>
    </div>
</div>
<div class="vh-100 vw-100 mt-5">

    <div class="container vw-100 text-center">
        <input id="access" value="@ViewBag.access_token" hidden />
        <input hidden id="Id" value="@Model"/>
        <input hidden value="@ViewBag.access_token" id="access"/>

        <input class="form-control-plaintext" id="TableName" type="text" placeholder="@Localizer["Enter the table name"]"/>

        <input class="btn btn-dark" type="submit" id="submit" />
    </div>
</div>


@section Scripts{
    <script src="~/js/EditTable.js"></script>
}