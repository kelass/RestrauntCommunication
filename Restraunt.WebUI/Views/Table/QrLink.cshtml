@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="customContainer">
    <div class="row">
        <div class="col-sm-6 d-flex btn-group-vertical">
            <div class="container text-center">
            <h1>@Localizer["You created a new table"]</h1>
            
            <h2>@Localizer["You can scan and check menu"]</h2>
            <h2><a asp-controller="Table" asp-action="Tables" class="link-dark">@Localizer["Tables page"]</a></h2>
            </div>
        </div>
        <div class="col-sm-6 d-flex"><img class="img-fluid" src="@ViewBag.QR" /></div>
    </div>
</div>